{
  "compilerOptions": {
    "jsx": "preserve",
    "rootDir": "./resources/js/",
    "outDir": "./resources/built",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["ES2023", "dom"],
    // "baseUrl": ".",
    "paths": {
      "@": ["./resources/js/"],
      // "*": ["./resources/ls/@types/*"],
    },
    "typeRoots": [
      "node_modules/@types/*",
      // "./resources/js/@types/*"
    ]
  },
  "include": ["resources/js/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true,
  }
}
