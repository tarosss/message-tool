{
    "compilerOptions": {
        "jsx": "preserve",
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "include": [
        "resources/js/**/*" 
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
  }